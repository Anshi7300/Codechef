import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
      Scanner input = new Scanner(System.in);
      int t = input.nextInt();
      while(t >= 1){
          int x = input.nextInt();
          int y = input.nextInt();
          int a = y*2;
          if(x < a){
              System.out.println("no");
          }
          else{
              System.out.println("yes");
          }
          t--;
      }
	}
}
