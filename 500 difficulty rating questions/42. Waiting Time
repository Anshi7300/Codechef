import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
      Scanner input = new Scanner(System.in);
      int t = input.nextInt();
      while(t >= 1){
          int k = input.nextInt();
          int x = input.nextInt();
          System.out.println((k*7)-x);
          t--;
      }
	}
}
